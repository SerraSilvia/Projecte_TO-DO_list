<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestor de Tareas - Detalle de Tarea</title>
    <link rel="stylesheet" href="/home.css" />
    <link rel="stylesheet" href="../public/styles.css" />
  </head>

  <body>
    <header>
      <nav class="navbar">
        <div class="logo-header">
          <h1>Gestor de Tareas</h1>
        </div>
        <button id="logout" class="btn">Cerrar sesiÃ³n</button>
      </nav>
    </header>

    <div class="content">
      <div class="page-header">
        <a href="/lists/<%= task.id_list %>" class="btn back-button">â¬…ï¸ Volver a la Lista</a>
        <h1>âœ¨ Detalle de la Tarea âœ¨</h1>
        <button id="editButton" class="btn edit-button">âœï¸ Editar Tarea</button>
      </div>

      <div class="grid">
        <div id="detailsCard" class="card task-card">
          <h3 class="task-name">ğŸ“ <%= task.titol %></h3>
          <div class="task-main-content">
            <div class="task-details-box">
              <h4>InformaciÃ³n de la Tarea ğŸ“„</h4>
              <p class="detail-content"><strong>DescripciÃ³n:</strong> <%= task.descripcio || 'No hay descripciÃ³n disponible para esta tarea.' %></p>
              <p class="detail-content"><strong>Estado:</strong> <%= task.estat %></p>
              <p class="detail-content"><strong>Prioridad:</strong> <%= task.prioritat %></p>
              <p class="detail-content"><strong>Creador:</strong> <%= task.creador %></p>
              <p class="detail-content"><strong>UbicaciÃ³n:</strong> <%= task.ubicacio || 'No especificada' %></p>
              <p class="detail-content"><strong>Fecha LÃ­mite:</strong> <%= task.data_limit ? new Date(task.data_limit).toLocaleDateString() : 'No especificada' %></p>
              <p class="detail-content"><strong>Fecha CreaciÃ³n:</strong> <%= new Date(task.data_creacio).toLocaleDateString() %></p>
            </div>
          </div>
          <div class="form-buttons">
            <button id="deleteTaskButton" class="btn btn-danger">ğŸ—‘ï¸ Eliminar Tarea</button>
          </div>
        </div>

        <div id="editForm" class="card task-card edit-form-card" style="display: none;">
          <h3 class="task-name">âœ¨ Editar Tarea âœ¨</h3>
          <form id="taskForm" class="kawaii-form">
            <div class="form-group">
              <label for="titol">ğŸ“ TÃ­tulo de la tarea:</label>
              <input type="text" id="titol" name="titol" value="<%= task.titol %>" required />
            </div>

            <div class="form-group">
              <label for="descripcio">ğŸ“„ DescripciÃ³n:</label>
              <textarea id="descripcio" name="descripcio" rows="4"><%= task.descripcio %></textarea>
            </div>

            <div class="form-group">
              <label for="estat">Estado:</label>
              <select id="estat" name="estat" required>
                <option value="pendiente" <%= task.estat === 'pendiente' ? 'selected' : '' %>>Pendiente</option>
                <option value="en progreso" <%= task.estat === 'en progreso' ? 'selected' : '' %>>En progreso</option>
                <option value="completada" <%= task.estat === 'completada' ? 'selected' : '' %>>Completada</option>
              </select>
            </div>

            <div class="form-group">
              <label for="prioritat">Prioridad:</label>
              <select id="prioritat" name="prioritat" required>
                <option value="baja" <%= task.prioritat === 'baja' ? 'selected' : '' %>>Baja</option>
                <option value="media" <%= task.prioritat === 'media' ? 'selected' : '' %>>Media</option>
                <option value="alta" <%= task.prioritat === 'alta' ? 'selected' : '' %>>Alta</option>
              </select>
            </div>

            <div class="form-group">
              <label for="ubicacio">UbicaciÃ³n:</label>
              <input type="text" id="ubicacio" name="ubicacio" value="<%= task.ubicacio %>" />
            </div>

            <div class="form-group">
              <label for="data_limit">Fecha LÃ­mite:</label>
              <input type="date" id="data_limit" name="data_limit" value="<%= task.data_limit ? task.data_limit.substring(0, 10) : '' %>" />
            </div>

            <div class="form-buttons">
              <button type="button" id="cancelButton" class="btn btn-secondary">Cancelar</button>
              <button type="submit" class="btn btn-success">Guardar Cambios</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      const logoutButton = document.getElementById("logout");
      const editButton = document.getElementById("editButton");
      const cancelButton = document.getElementById("cancelButton");
      const detailsCard = document.getElementById("detailsCard");
      const editForm = document.getElementById("editForm");
      const taskForm = document.getElementById("taskForm");
      const deleteTaskButton = document.getElementById("deleteTaskButton");

      logoutButton?.addEventListener("click", async (e) => {
        e.preventDefault();
        try {
          const res = await fetch("/api/auth/logout", { method: "POST", headers: { "Content-Type": "application/json" } });
          if (res.ok) window.location.href = "/";
          else alert("Error al cerrar sesiÃ³n.");
        } catch {
          alert("Error de red al intentar cerrar sesiÃ³n.");
        }
      });

      editButton?.addEventListener("click", (e) => {
        e.preventDefault();
        detailsCard.style.display = "none";
        editForm.style.display = "block";
        editButton.style.display = "none";
      });

      cancelButton?.addEventListener("click", (e) => {
        e.preventDefault();
        editForm.style.display = "none";
        detailsCard.style.display = "block";
        editButton.style.display = "block";
      });

      taskForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(taskForm);
        const taskData = Object.fromEntries(formData.entries());
        try {
          const res = await fetch(`/api/tasks/<%= task.id_task %>`, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(taskData),
          });
          if (res.ok) {
            alert("Tarea actualizada correctamente.");
            window.location.reload();
          } else alert("Error al guardar los cambios.");
        } catch {
          alert("Error de red al guardar los cambios.");
        }
      });

      deleteTaskButton?.addEventListener("click", async () => {
        if (confirm("Â¿Seguro que quieres eliminar esta tarea?")) {
          try {
            const res = await fetch(`/api/tasks/<%= task.id_task %>`, { method: "DELETE" });
            if (res.ok) {
              alert("Tarea eliminada correctamente.");
              window.location.href = `/lists/<%= task.id_list %>`;
            } else alert("Error al eliminar la tarea.");
          } catch {
            alert("Error de red al eliminar la tarea.");
          }
        }
      });
    </script>
  </body>
</html>
