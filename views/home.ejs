<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestor de Listas</title>
    <link rel="stylesheet" href="/home.css" />
    <link rel="stylesheet" href="/styles.css" />
    <style>
      .header-view {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding: 0 20px;
      }

      .header-view h1 {
        color: #d4746a;
        font-size: 28px;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
      }

      .edit-button {
        text-decoration: none;
        font-size: 16px;
        padding: 12px 20px;
      }

      .edit-button:hover {
        text-decoration: none;
      }

      /* New styles for list cards */
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); /* Adjusted for more flexibility */
        gap: 25px;
        padding: 20px;
        max-width: 1200px;
        margin: 30px auto;
      }

      .card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        text-decoration: none; /* Ensure anchor doesn't have default underline */
        color: inherit;
        display: flex; /* For better content alignment */
        flex-direction: column;
        justify-content: space-between;
      }

      .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }

      .card img {
        width: 100%;
        height: 180px; /* Fixed height for consistency */
        object-fit: cover;
        border-bottom: 1px solid #eee;
      }

      .card h2 {
        font-size: 24px;
        color: #d4746a;
        margin: 15px 0;
        padding: 0 15px;
      }

      .card p {
        font-size: 16px;
        color: #666;
        padding: 0 15px 15px;
      }

      /* Responsive design */
      @media (max-width: 768px) {
        .header-view {
          flex-direction: column;
          gap: 15px;
          text-align: center;
        }
        .grid {
          grid-template-columns: 1fr; /* Single column on small screens */
        }
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar">
        <div class="logo-header">
          <!-- You might want to change this logo/branding -->
          <img src="/logo_laDolca.png" alt="logo" />
          <h1>Gestor de Listas</h1>
        </div>

        <button id="logout" class="btn">Cerrar sesión</button>
      </nav>
    </header>
    <div class="content">
      <h1 class="main-title">Tus Listas</h1>
      <p class="description">Organiza tus tareas y proyectos</p>
      <div class="grid" id="lists-grid">
        <!-- List cards will be injected here by JavaScript -->
        <p id="loading-message">Cargando listas...</p>
        <p id="error-message" style="color: red; display: none;">Error al cargar las listas. Inténtalo de nuevo.</p>
      </div>
      <button class="btn" id="add-list-button" style="margin-top: 30px;">Crear Nueva Lista</button>
    </div>

    <script>
      const logoutButton = document.getElementById("logout");
      const listsGrid = document.getElementById("lists-grid");
      const loadingMessage = document.getElementById("loading-message");
      const errorMessage = document.getElementById("error-message");
      const addListButton = document.getElementById("add-list-button");

      // Handle logout
      logoutButton?.addEventListener("click", (e) => {
        e.preventDefault();
        fetch("/api/auth/logout", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        }).then((res) => {
          if (res.ok) {
            window.location.href = "/";
          } else {
            alert("Error al cerrar sesión.");
          }
        });
      });

      // Function to fetch and display lists
      const fetchAndDisplayLists = async () => {
        loadingMessage.style.display = 'block';
        errorMessage.style.display = 'none';
        listsGrid.innerHTML = ''; // Clear existing content

        try {
          const response = await fetch("/api/lists"); // Assuming you have a GET /api/lists endpoint
          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }
          const lists = await response.json();

          if (lists.length === 0) {
            listsGrid.innerHTML = '<p>No tienes listas. ¡Crea una nueva!</p>';
          } else {
            lists.forEach((list) => {
              const card = document.createElement("a");
              card.href = `/lists/${list.id}`; // Link to a detail page for the list
              card.classList.add("card");
              card.innerHTML = `
                <img src="/default-list-image.jpg" alt="${list.name || 'Lista'}" />
                <h2>${list.name || 'Lista sin nombre'}</h2>
                <p>${list.tasks ? list.tasks.length : 0} tareas</p>
              `;
              listsGrid.appendChild(card);
            });
          }
        } catch (error) {
          console.error("Error fetching lists:", error);
          errorMessage.style.display = 'block';
        } finally {
          loadingMessage.style.display = 'none';
        }
      };

      // Call the function when the page loads
      document.addEventListener("DOMContentLoaded", fetchAndDisplayLists);

      // Handle "Create New List" button
      addListButton.addEventListener("click", async () => {
        const listName = prompt("Introduce el nombre de la nueva lista:");
        if (listName) {
          try {
            const response = await fetch("/api/lists", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ name: listName }), // Assuming your API expects a 'name' field
            });
            if (!response.ok) {
              throw new Error(`HTTP error! status: ${response.status}`);
            }
            const newList = await response.json();
            alert(`Lista "${newList.name}" creada con éxito!`);
            fetchAndDisplayLists(); // Refresh the list of lists
          } catch (error) {
            console.error("Error creating list:", error);
            alert("Error al crear la lista.");
          }
        }
      });
    </script>
  </body>
</html>