<!DOCTYPE html>
<html lang="ca">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestor de Llistes - Detall de Llista</title>
    <link rel="stylesheet" href="/home.css" />
    <link rel="stylesheet" href="../public/styles.css" />
  </head>
  <body>
    <header>
      <nav class="navbar">
        <div class="logo-header">
          <h1>Gestor de Llistes</h1>
        </div>
        <button id="logout" class="btn">Tancar sessiÃ³</button>
      </nav>
    </header>
    <div class="content">
      <div class="page-header">
        <a href="/" class="btn back-button">â¬…ï¸ Tornar a Llistes</a>
        <h1>âœ¨ Detall de la Llista âœ¨</h1>
        <button id="editButton" class="btn edit-button">âœï¸ Editar Llista</button>
      </div>
      <div class="grid">
        <div id="detailsCard" class="card list-card">
          <h3 class="list-name">ğŸ“ <%= list.nom %></h3>
          <div class="list-main-content">
            <div class="list-description">
              <h4>DescripciÃ³ ğŸ“„</h4>
              <p class="description-content"><%= list.descripcio || 'Aquesta llista no tÃ© descripciÃ³.' %></p>
              <% if (list.tasks && list.tasks.length > 0) { %>
                <h4>Tasques (<%= list.tasks.length %>)</h4>
                <ul class="tasks-list">
                  <% list.tasks.forEach(function(task) { %>
                    <li class="task-item">
                      <%= task.titol %> (Estat: <%= task.estat %>, Prioritat: <%= task.prioritat %>)
                    </li>
                  <% }); %>
                </ul>
              <% } else { %>
                <p>Aquesta llista encara no tÃ© tasques.</p>
              <% } %>
            </div>
          </div>
          <div class="form-buttons">
            <button id="addTaskButton" class="btn btn-success">â• Afegir Tasca</button>
            <button id="deleteListButton" class="btn btn-danger">ğŸ—‘ï¸ Eliminar Llista</button>
          </div>
        </div>

        <div id="editForm" class="card list-card edit-form-card" style="display: none;">
          <h3 class="list-name">âœ¨ Editar Llista âœ¨</h3>
          <form id="listForm" class="kawaii-form">
            <div class="form-group">
              <label for="nom">ğŸ“ Nom de la llista:</label>
              <input type="text" id="nom" name="nom" value="<%= list.nom %>" required>
            </div>
            <div class="form-group">
              <label for="descripcio">ğŸ“„ DescripciÃ³:</label>
              <textarea id="descripcio" name="descripcio" rows="4"><%= list.descripcio %></textarea>
            </div>
            <div class="form-buttons">
              <button type="button" id="cancelButton" class="btn btn-secondary">CANCELÂ·LAR</button>
              <button type="submit" class="btn btn-success">GUARDAR CANVIS</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      const logoutButton = document.getElementById("logout");
      const editButton = document.getElementById("editButton");
      const cancelButton = document.getElementById("cancelButton");
      const detailsCard = document.getElementById("detailsCard");
      const editForm = document.getElementById("editForm");
      const listForm = document.getElementById("listForm");
      const deleteListButton = document.getElementById("deleteListButton");
      const addTaskButton = document.getElementById("addTaskButton");

      logoutButton?.addEventListener("click", async (e) => {
        e.preventDefault();
        try {
          const response = await fetch("/api/auth/logout", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
          });
          if (response.ok) window.location.href = "/";
          else alert("Error en tancar sessiÃ³.");
        } catch {
          alert("Error de xarxa en tancar sessiÃ³.");
        }
      });

      editButton?.addEventListener("click", (e) => {
        e.preventDefault();
        detailsCard.style.display = "none";
        editForm.style.display = "block";
        editButton.style.display = "none";
      });

      cancelButton?.addEventListener("click", (e) => {
        e.preventDefault();
        editForm.style.display = "none";
        detailsCard.style.display = "block";
        editButton.style.display = "block";
      });

      listForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(listForm);
        const listData = {
          nom: formData.get("nom"),
          descripcio: formData.get("descripcio"),
        };
        try {
          const response = await fetch(`/api/lists/<%= list.id_list %>`, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(listData),
          });
          if (response.ok) {
            alert("Llista actualitzada correctament!");
            window.location.reload();
          } else alert("Error en guardar els canvis.");
        } catch {
          alert("Error de xarxa en guardar els canvis.");
        }
      });

      deleteListButton?.addEventListener("click", async () => {
        if (confirm("Vols eliminar aquesta llista? Les seves tasques tambÃ© s'eliminaran.")) {
          try {
            const response = await fetch(`/api/lists/<%= list.id_list %>`, { method: "DELETE" });
            if (response.ok) {
              alert("Llista eliminada correctament.");
              window.location.href = "/";
            } else alert("Error en eliminar la llista.");
          } catch {
            alert("Error de xarxa en eliminar la llista.");
          }
        }
      });

      addTaskButton?.addEventListener("click", () => {
        window.location.href = `/lists/<%= list.id_list %>/tasks/new`;
      });
    </script>
  </body>
</html>
