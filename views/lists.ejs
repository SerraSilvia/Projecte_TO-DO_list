<!DOCTYPE html>
<html lang="ca">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestor de Llistes</title>
    <link rel="stylesheet" href="/home.css" />
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <header>
      <nav class="navbar">
        <div class="logo-header">
          <img src="/logo_laDolca.png" alt="logo" />
          <h1>Gestor de Llistes</h1>
        </div>
        <button id="logout" class="btn">Tancar sessiÃ³</button>
      </nav>
    </header>

    <div class="content">
      <div class="page-header">
        <h1>Les meves llistes âœ¨</h1>
        <a href="/lists/new" class="btn edit-button">â• Nova llista</a>
      </div>

      <div class="lists-container">
        <% if (data && data.length > 0) { %>
          <% data.forEach(list => { %>
            <div class="list-card">
              <h3 class="list-name">ğŸ“‹ <%= list.nom %></h3>

              <div class="list-image">
                <img src="<%= list.img || '/default-list-image.jpg' %>" alt="<%= list.nom %>" />
              </div>

              <div class="list-actions">
                <a href="/lists/<%= list.id_list %>" class="btn btn-primary">Veure tasques</a>
                <button class="btn btn-danger btn-delete-list" data-id="<%= list.id_list %>">
                  ğŸ—‘ï¸ Eliminar
                </button>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p style="text-align:center; color:#6b4423;">No tens cap llista creada encara.</p>
        <% } %>
      </div>
    </div>

    <script>
      const logoutButton = document.getElementById("logout");
      const deleteListButtons = document.querySelectorAll(".btn-delete-list");

      logoutButton?.addEventListener("click", async (e) => {
        e.preventDefault();
        try {
          const response = await fetch("/api/auth/logout", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
          });
          if (response.ok) window.location.href = "/";
          else alert("Error en tancar la sessiÃ³.");
        } catch {
          alert("Error de xarxa en tancar la sessiÃ³.");
        }
      });

      deleteListButtons.forEach(button => {
        button.addEventListener("click", async e => {
          e.preventDefault();
          const id = button.getAttribute("data-id");
          if (confirm("Segur que vols eliminar aquesta llista? ğŸ—‘ï¸")) {
            const res = await fetch(`/api/lists/${id}`, { method: "DELETE" });
            if (res.ok) location.reload();
            else alert("No s'ha pogut eliminar la llista.");
          }
        });
      });
    </script>
  </body>
</html>
