<!DOCTYPE html>
<html lang="ca">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestor de Llistes</title>
    <link rel="stylesheet" href="/home.css" />
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <header class="main-header">
      <nav class="navbar">
        <div class="logo-header">
          <img src="/logo_laDolca.png" alt="logo" />
          <h1>Gestor de Llistes</h1>
        </div>
        <button id="logout" class="btn">Tancar sessi√≥</button>
      </nav>
    </header>
    <div class="container" style="margin-top:110px;">
      <div class="content">
        <div class="page-header">
          <h1>Les meves llistes ‚ú®</h1>
          <a href="/home#nueva-lista" class="btn edit-button">Nova llista</a>
        </div>

        <div class="lists-container">
          <% if (data && data.length > 0) { %>
            <% data.forEach(list => { %>
              <div class="list-card">
                <h3 class="list-name">üìã <%= list.nom %></h3>

                <div class="list-image">
                  <img src="<%= list.img || '/default-list-image.jpg' %>" alt="<%= list.nom %>" />
                </div>

                <div class="list-actions">
                  <a href="/lists/<%= list.id_list %>" class="btn btn-primary">Veure tasques</a>
                  <button class="btn btn-danger btn-delete-list" data-id="<%= list.id_list %>">
                    üóëÔ∏è Eliminar
                  </button>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p style="text-align:center; color:#6b4423;">No tens cap llista creada encara.</p>
          <% } %>
        </div>
      </div>
    </div>
    <style>
      .main-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        z-index: 100;
        background: rgba(255,255,255,0.95);
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        display: flex;
        align-items: center;
        justify-content: center;
        height: 90px;
      }
      .navbar {
        width: 100%;
        max-width: 1200px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 30px;
        height: 90px;
      }
      .logo-header {
        display: flex;
        align-items: center;
        gap: 15px;
      }
      .logo-header img {
        height: 60px;
        width: auto;
        border-radius: 15px;
        background: #fff;
        border: 2px solid #f4c2a1;
        box-shadow: 0 2px 8px rgba(244, 194, 161, 0.15);
      }
      .logo-header h1 {
        font-size: 28px;
        color: #d4746a;
        font-family: 'Gochi Hand', cursive;
        margin: 0;
      }
      @media (max-width: 600px) {
        .main-header, .navbar {
          height: 70px;
          padding: 0 10px;
        }
        .logo-header img {
          height: 40px;
        }
        .logo-header h1 {
          font-size: 18px;
        }
      }
    </style>

    <script>
      const logoutButton = document.getElementById("logout");
      const deleteListButtons = document.querySelectorAll(".btn-delete-list");

      logoutButton?.addEventListener("click", async (e) => {
        e.preventDefault();
        try {
          const response = await fetch("/api/auth/logout", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
          });
          if (response.ok) window.location.href = "/";
          else alert("Error en tancar la sessi√≥.");
        } catch {
          alert("Error de xarxa en tancar la sessi√≥.");
        }
      });

      deleteListButtons.forEach(button => {
        button.addEventListener("click", async e => {
          e.preventDefault();
          const id = button.getAttribute("data-id");
          if (confirm("Segur que vols eliminar aquesta llista? üóëÔ∏è")) {
            const res = await fetch(`/api/lists/${id}`, { method: "DELETE" });
            if (res.ok) location.reload();
            else alert("No s'ha pogut eliminar la llista.");
          }
        });
      });
    </script>
  </body>
</html>
